<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
  	http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>formatter</id>

	<formats>
		<format>zip</format>
	</formats>
	<files>
		<file>
			<source>${project.basedir}/README.md</source>
			<outputDirectory></outputDirectory>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/*.jar</directory>
			<outputDirectory>jar</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/assembly/input</directory>
			<outputDirectory>input</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/assembly/conf</directory>
			<outputDirectory>conf</outputDirectory>
			<lineEnding>unix</lineEnding>
		</fileSet>
	</fileSets>
	<dependencySets>
        <dependencySet>
            <outputDirectory>jar</outputDirectory>
            <includes>
            	<include>fr.kdefombelle.integration:formatter:jar</include>
                <include>org.apache.camel:camel-freemarker:jar</include>
                <include>org.freemarker:freemarker:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>